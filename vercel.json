{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "file:./prisma/dev.db",
    "JWT_SECRET": "xiuxian-secret-key-change-in-production",
    "FRONTEND_URL": "https://your-project.vercel.app"
  }
}
